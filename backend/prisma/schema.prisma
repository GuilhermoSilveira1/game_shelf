generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id        Int      @id            // id da IGDB
  name      String   @db.VarChar(255)
  summary   String?
  coverUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  genres    GameGenre[]
  shelf     Shelf[]

  @@index([name])
}

model Genre {
  id     Int        @id              // id da IGDB
  name   String     @unique
  slug   String?
  games  GameGenre[]
}

model GameGenre {
  gameId  Int
  genreId Int
  game    Game  @relation(fields: [gameId], references: [id])
  genre   Genre @relation(fields: [genreId], references: [id])

  @@id([gameId, genreId])
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  shelf        Shelf[]
}

enum ShelfStatus {
  WANT_TO_PLAY
  PLAYING
  COMPLETED
  DROPPED
}

model Shelf {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  gameId Int
  game   Game @relation(fields: [gameId], references: [id])

  status ShelfStatus
  description String?
  plataform String?
  rating Float?
  time_played Float?

  @@unique([userId, gameId]) // impede jogo duplicado na shelf
}
